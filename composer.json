{
    "name": "swiftly/http",
    "description": "Utility for handling HTTP requests and responses.",
    "homepage": "https://github.com/SwiftlyPHP/http",
    "readme": "README.md",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8"
    },
    "require-dev": {
        "vimeo/psalm": "^5.26",
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^3.84"
    },
    "autoload": {
        "psr-4": {
            "Swiftly\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Swiftly\\Http\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "@php vendor/bin/phpunit",
        "style": "@php vendor/bin/php-cs-fixer fix --diff"
    }
}
