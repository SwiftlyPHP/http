{
    "name": "swiftly/http",
    "description": "Utility for handling HTTP requests and responses.",
    "homepage": "https://github.com/SwiftlyPHP/http",
    "readme": "README.md",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8",
        "ext-json": "*"
    },
    "require-dev": {
        "vimeo/psalm": "^5.15",
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^3"
    },
    "autoload": {
        "psr-4": {
            "Swiftly\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Swiftly\\Http\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "@php vendor/bin/php-cs-fixer fix",
        "lint": "@php vendor/bin/php-cs-fixer check --diff"
    }
}
